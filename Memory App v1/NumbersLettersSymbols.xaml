            <DoubleAnimation x:Name="da_gridLeftRectAppear" Storyboard.TargetName="comptransform_gridLeftRect" Storyboard.TargetProperty="TranslateX" Duration="0:0:1" EnableDependentAnimation="True"/>
        </Storyboard>

        <Storyboard x:Name="styGridLeftRectDisappear">
            <DoubleAnimation x:Name="da_gridLeftRectDisappear" Storyboard.TargetName="comptransform_gridLeftRect" Storyboard.TargetProperty="TranslateX" Duration="0:0:1" EnableDependentAnimation="True"/>
