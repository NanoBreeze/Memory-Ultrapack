<Page
    x:Class="Memory_App_v1.NumbersLettersSymbols"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Memory_App_v1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.BottomAppBar>
        <CommandBar Background="#FF0A320A" BorderBrush="Transparent" >
            <CommandBar.PrimaryCommands>
                <AppBarButton x:Name="appbarbuttonCaption" Label="Show Answer's Transcript" Icon="Caption"  Click="AppBarButton_Click" />

                <AppBarButton Label="Timer" Icon="Clock">
                    <AppBarButton.Flyout>
                        <Flyout Placement="Top">
                            <StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Set Time"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="commandbar_timer_tbxMinutes" Header="Minutes" Text="" InputScope="Number"/>
                                    <TextBox x:Name="commandbar_timer_tbxSeconds" Header="Seconds" Text="" InputScope="Number"/>
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Label="Options" Icon="More" >
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <ToggleMenuFlyoutItem x:Name="commandbar_options_toggle1" Click="commandbar_options_toggle1_Click">Automatic Repeat</ToggleMenuFlyoutItem>
                            <ToggleMenuFlyoutItem x:Name="commandbar_options_toggle2" Click="commandbar_options_toggle2_Click">Automatic Repeat ±1</ToggleMenuFlyoutItem>
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>

            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton Icon="Back" Label="Practice Page" Click="appbarButtonBack_Click"/>
                <AppBarButton Icon="Home" Label="Main Menu" Click="appbarButtonHome_Click"/>
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>




    <Page.Resources>
        <Storyboard x:Name="storyboard" >
            <DoubleAnimation Storyboard.TargetName="gridTransform"  Storyboard.TargetProperty="TranslateY"
                             From="0" To="-500" Duration="0:0:1"/>
            <DoubleAnimation Storyboard.TargetName="Hi" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:1" EnableDependentAnimation="True" />
            <DoubleAnimation Storyboard.TargetName="gridThreeButtons" Storyboard.TargetProperty="Opacity"
                              From="0" To="1" BeginTime="0:0:1" Duration="0:0:0.5" EnableDependentAnimation="True"/>
        </Storyboard>

        <Storyboard x:Name="styGridRectsAppear">
            <DoubleAnimation Storyboard.TargetName="gridRectMiddle" Storyboard.TargetProperty="Opacity" From="0"  To="1" Duration="0:0:1"/>
            <DoubleAnimation Storyboard.TargetName="gridLeftRect" Storyboard.TargetProperty="Opacity" From="0"  To="1" Duration="0:0:1" />
            <DoubleAnimation Storyboard.TargetName="gridRightRect" Storyboard.TargetProperty="Opacity" From="0"  To="1" Duration="0:0:1" />
        </Storyboard>


        <Storyboard x:Name="styGridMidRectAppear">
