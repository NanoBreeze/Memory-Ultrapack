        <Storyboard x:Name="styGridRightRectDisappear">
            <DoubleAnimation x:Name="da_gridRightRectDisappear" Storyboard.TargetName="comptransform_gridRightRect" Storyboard.TargetProperty="TranslateX"  Duration="0:0:1"  />
